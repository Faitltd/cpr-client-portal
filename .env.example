# Zoho OAuth Configuration (Admin connection)
ZOHO_CLIENT_ID=your_client_id_here
ZOHO_CLIENT_SECRET=your_client_secret_here
ZOHO_REDIRECT_URI=http://localhost:5173/auth/callback
# Expanded scopes (re-authorize after updating to apply new scopes)
# Note: ZohoCRM.users.READ is required for /users?type=CurrentUser
ZOHO_SCOPE=ZohoCRM.modules.ALL,ZohoCRM.settings.ALL,ZohoCRM.org.ALL,ZohoCRM.users.READ,ZohoCRM.coql.READ,ZohoBooks.fullaccess.ALL,ZohoSign.documents.ALL

# Zoho API Endpoints
ZOHO_AUTH_URL=https://accounts.zoho.com/oauth/v2/auth
ZOHO_TOKEN_URL=https://accounts.zoho.com/oauth/v2/token
ZOHO_API_BASE=https://www.zohoapis.com/crm/v8
ZOHO_TRADE_PARTNERS_MODULE=Trade_Partners
# You can provide a comma-separated list of module API names to try, e.g.
# ZOHO_TRADE_PARTNERS_MODULE=Trade_Partners,Trade_Partners3,CustomModule1
ZOHO_TRADE_PARTNER_RELATED_LIST=Deals3
ZOHO_BOOKS_API_BASE=https://www.zohoapis.com/books/v3
ZOHO_BOOKS_ORG_ID=your_zoho_books_org_id
ZOHO_SIGN_API_BASE=https://sign.zoho.com/api/v1
ZOHO_SIGN_HOST=https://portal.homecpr.pro

# SalesIQ OAuth & API
SALESIQ_CLIENT_ID=your_salesiq_client_id
SALESIQ_CLIENT_SECRET=your_salesiq_client_secret
SALESIQ_REDIRECT_URI=https://homecpr.pro/auth/salesiq/callback
SALESIQ_AUTH_URL=https://accounts.zoho.com/oauth/v2/auth
SALESIQ_TOKEN_URL=https://accounts.zoho.com/oauth/v2/token
SALESIQ_SCOPE=SalesIQ.conversations.READ,SalesIQ.conversations.CREATE
SALESIQ_SCREEN_NAME=customprofessionalrenovation
# Optional override for API base (defaults to https://salesiq.zoho.com/api/v2/{SALESIQ_SCREEN_NAME})
SALESIQ_API_BASE=

# Cliq OAuth & API
CLIQ_CLIENT_ID=your_cliq_client_id
CLIQ_CLIENT_SECRET=your_cliq_client_secret
CLIQ_REDIRECT_URI=https://homecpr.pro/auth/cliq/callback
CLIQ_AUTH_URL=https://accounts.zoho.com/oauth/v2/auth
CLIQ_TOKEN_URL=https://accounts.zoho.com/oauth/v2/token
CLIQ_SCOPE=ZohoCliq.Channels.CREATE,ZohoCliq.Channels.UPDATE,ZohoCliq.Webhooks.CREATE
CLIQ_API_BASE=https://cliq.zoho.com/api/v2
# Comma-separated emails to auto-add to each client channel
CLIQ_STAFF_EMAILS=ray@homecpr.pro,info@homecpr.pro,jeff@homecpr.pro,marysue@homecpr.pro,sean@homecpr.pro
# Invite client email to Cliq external channel (true/false)
CLIQ_INVITE_CLIENT_EMAILS=true
# Optional channel name prefix
CLIQ_CHANNEL_PREFIX=client
# Ignore messages from these sender emails in Cliq webhook
CLIQ_IGNORE_EMAILS=

# Supabase Configuration (server-side only)
SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Session Secret
SESSION_SECRET=generate_random_secret_here

# Portal Settings
PORTAL_PASSWORD_ITERATIONS=210000
PORTAL_DEV_SHOW_ALL=false

PORTAL_ADMIN_PASSWORD=change_me
PORTAL_ADMIN_SESSION_TTL_HOURS=12
